# OSINT Agent Configuration
# Copy this file to .env and fill in your actual values

# ==================== LLM API CONFIGURATION ====================
# Choose ONE of the following LLM providers

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_TEMPERATURE=0.7

# Default LLM Provider (openai or anthropic)
DEFAULT_LLM_PROVIDER=openai

# ==================== OSINT TOOL APIs ====================
# Optional: Enhanced search and intelligence gathering

# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Shodan API (for internet-connected device intelligence)
SHODAN_API_KEY=your_shodan_api_key_here

# Censys API (for internet asset discovery)
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here

# VirusTotal API (for threat intelligence)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# SecurityTrails API (for DNS and domain intelligence)
SECURITYTRAILS_API_KEY=your_securitytrails_api_key_here

# Hunter.io API (for email intelligence)
HUNTER_API_KEY=your_hunter_api_key_here

# News API (for news aggregation)
NEWS_API_KEY=your_news_api_key_here

# Twitter/X API (for social media OSINT)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# ==================== AGENT CONFIGURATION ====================
# Investigation settings
MAX_ITERATIONS=15
MIN_CONFIDENCE=0.6
DEFAULT_TIMEOUT=30

# Memory and Storage
DATABASE_PATH=data/osint_memory.db
REPORTS_DIR=data/reports
CACHE_DIR=data/cache

# ==================== WORKFLOW CONFIGURATION ====================
# Scheduling and automation
ENABLE_SCHEDULING=false
DEFAULT_CHECK_INTERVAL=300  # seconds
MAX_PARALLEL_INVESTIGATIONS=3

# ==================== ALERT CONFIGURATION ====================
# Alert notifications
ENABLE_ALERTS=true
ALERT_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# ==================== REPORTING CONFIGURATION ====================
# Report generation settings
DEFAULT_REPORT_FORMAT=markdown
DEFAULT_CLASSIFICATION=UNCLASSIFIED
INCLUDE_RAW_DATA=false

# ==================== SECURITY & PRIVACY ====================
# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Proxy settings (optional)
USE_PROXY=false
PROXY_URL=http://your-proxy:8080
PROXY_USERNAME=
PROXY_PASSWORD=

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ==================== LOGGING ====================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=data/osint_agent.log
LOG_ROTATION=10MB

# ==================== DEVELOPMENT ====================
DEBUG_MODE=false
VERBOSE_OUTPUT=true
